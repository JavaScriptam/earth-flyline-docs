---
const {color} = Astro.props;
---

<span class={`ant-tag ant-tag-${color}`}>
  <slot></slot>
</span>
<style>
.ant-tag {
  box-sizing: border-box;
  margin: 0 8px 0 0;
  color: #000000d9;
  font-size: 14px;
  font-variant: tabular-nums;
  line-height: 1.5715;
  list-style: none;
  font-feature-settings: "tnum";
  display: inline-block;
  height: auto;
  padding: 0 7px;
  font-size: 12px;
  line-height: 20px;
  white-space: nowrap;
  background: #fafafa;
  border: 1px solid #d9d9d9;
  border-radius: 2px;
  opacity: 1;
  transition: all .3s;
}
.ant-tag-red {
  color:#fff;
  border-color: transparent;
  background-color: rgb(255, 85, 0);
}
.ant-tag-pink {
  color: #c41d7f;
    background: #fff0f6;
    border-color: #ffadd2;
}
.ant-tag-yellow {
    color: #d4b106;
    background: #feffe6;
    border-color: #fffb8f
}
.ant-tag-blue {
    color: #096dd9;
    background: #e6f7ff;
    border-color: #91d5ff
}
.ant-tag-purple {
    color: #531dab;
    background: #f9f0ff;
    border-color: #d3adf7
}
.ant-tag-green {
  color:#fff;
  border-color: transparent;
  background-color: rgb(135, 208, 104);
}
.ant-tag-cyan{
  color: #08979c;
    background: #e6fffb;
    border-color: #87e8de;
}
</style>